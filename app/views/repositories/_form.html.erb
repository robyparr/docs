<%= form_with(model: repository, class: "contents") do |form| %>
  <div class="my-5">
    <%= component 'label', form: form, name: :name %>
    <%= component 'input', form: form, type: :text_field, name: :name, invalid: repository.errors[:name].any? %>
    <%= component 'input_error', errors: repository.errors[:name] %>
  </div>

  <div class="my-5">
    <%= component 'input', form: form, type: :check_box, name: :public %>
    <%= component 'label', form: form, name: :public, inline: true %>
  </div>

  <div class="inline">
    <%= component 'submit', form: form, content: 'Save repository' %>
  </div>
<% end %>
